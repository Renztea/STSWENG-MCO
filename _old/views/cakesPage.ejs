                                <% if(parseInt(currentPage) + 1 == numberofPages) { %>
                                    <button type="button" class="pageBtn pageBtnValue"><a><strong><%= currentPage %></strong></a></button>
                                <% } %>
                            <% } else if (currentPage > 2) { %>
                                <% if (currentPage > 3) { %>
                                    <button type="button" class="pageBtn pageBtnValue"><a>...</a></button>
                                <% } %>
